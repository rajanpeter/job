<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1200dp" >
                <ImageView android:id="@+id/imageView2"
           android:layout_width="400dp"
            android:layout_height="800dp" 
            android:layout_alignParentLeft="true"
             android:layout_centerVertical="true"
              android:src="@drawable/profile_mid"/>
      <Button android:id="@+id/personalprofile" 
          android:layout_width="150dp"
           android:layout_height="150dp" 
           android:layout_above="@+id/imageView2"
            android:layout_marginBottom="-90dp" 
             android:background="@drawable/fresher" 
             
                android:textColor="#000000" 
                android:layout_marginLeft="30dp"
            />
      <Button android:id="@+id/projectprofile" 
          android:layout_width="150dp"
           android:layout_height="150dp"
            android:layout_below="@+id/imageView2"
             android:layout_marginTop="-90dp" 
             android:background="@drawable/profile4" 
                android:textColor="#000000" 
                android:layout_marginLeft="20dp"
              />
      <Button android:id="@+id/certification" 
          android:layout_width="150dp"
           android:layout_height="150dp"
            android:layout_centerVertical="true"
             android:layout_marginLeft="-30dp" 
             android:background="@drawable/profile5" 
                android:textColor="#000000" 
             android:layout_toEndOf="@+id/imageView2" 
             android:layout_toRightOf="@+id/imageView2" 
           />
      <LinearLayout android:layout_width="fill_parent"
           android:layout_below="@+id/certification" 
           android:layout_above="@id/textView1" 
           android:layout_marginBottom="20dp" 
           android:layout_height="fill_parent">
           <Button android:id="@+id/companyprofile" 
               android:layout_width="150dp"
                android:layout_gravity="center" 
                 android:layout_marginLeft="300dp" 
                 android:background="@drawable/profile3" 
                android:textColor="#000000" 
                 android:layout_height="150dp"/>

           <TextView
               android:id="@+id/textView5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Corporate Experience"
               android:layout_gravity="center_vertical"
               android:textAppearance="?android:attr/textAppearanceLarge" />

      </LinearLayout>
      <LinearLayout android:orientation="horizontal" 
          android:layout_width="fill_parent" 
          android:layout_height="fill_parent"
           android:layout_below="@+id/personalprofile" 
           android:layout_alignParentLeft="true" 
           android:layout_alignParentStart="true" 
           android:layout_above="@+id/certification" 
           android:layout_marginTop="20dp">
           <Button android:id="@+id/Educational"
                android:background="@drawable/profile2" 
                android:layout_width="150dp"
                  android:layout_gravity="center" 
                  android:layout_marginLeft="300dp" 
                  android:layout_height="150dp"/>

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:text="Educational Qualifications"
               android:textAppearance="?android:attr/textAppearanceLarge" />

      </LinearLayout>

      <TextView
          android:id="@+id/textextcar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
           android:textSize="13dp"
          android:text="\u00a9 Carmatec IT Solutions Private Limited"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:textColor="#B0B0B0" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/certification"
          android:layout_alignBottom="@+id/certification"
          android:layout_toRightOf="@+id/certification"
          android:text="Certifications"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
          android:id="@+id/textView6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/projectprofile"
          android:layout_alignBottom="@+id/projectprofile"
          android:layout_toRightOf="@+id/projectprofile"
          android:text="Projects"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/personalprofile"
          android:layout_alignBottom="@+id/personalprofile"
          android:layout_toRightOf="@+id/personalprofile"
          android:text="Personal Information"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/imageView2"
          android:layout_alignParentLeft="true"
          android:text=""
          android:textAppearance="?android:attr/textAppearanceMedium" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
