<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/white_bg"
        android:padding="10dp" >

        

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street Address Line1"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/addess1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Street Address Line1"
             android:background="@drawable/login_edittext"
                        android:singleLine="true"
               android:paddingBottom="3dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="3dip"
            android:inputType="textPostalAddress" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street Address Line2"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <EditText
            android:id="@+id/addess2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Street Address Line2"
             android:background="@drawable/login_edittext"
                        android:singleLine="true"
                        android:paddingBottom="3dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="3dip"
            android:inputType="textPostalAddress" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="City"
             android:background="@drawable/login_edittext"
        
                        android:singleLine="true"
                        android:paddingBottom="3dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="3dip" 
            android:inputType="textCapSentences" />
  <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zip Code"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <EditText
            android:id="@+id/zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Zip Code"
             android:background="@drawable/login_edittext"
            
              android:paddingBottom="3dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="3dip"
                        android:singleLine="true"
            android:inputType="number" />
<TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <EditText
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Email"
             android:background="@drawable/login_edittext"
                        android:singleLine="true"
                         android:paddingBottom="3dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="3dip"
            android:inputType="textEmailAddress" />
<TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alternate Email Id"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <EditText
            android:id="@+id/email2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Alternate Email"
             android:background="@drawable/login_edittext"
                        android:singleLine="true"
                         android:paddingBottom="3dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="3dip"
            android:inputType="textEmailAddress" />
<TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <EditText
            android:id="@+id/contact1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Contact Number"
             android:paddingBottom="3dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="3dip"
             android:background="@drawable/login_edittext"
                        android:singleLine="true"
           android:inputType="number"/>
<TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alternate Contact Number"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <EditText
            android:id="@+id/contact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Alternate Number"
             android:background="@drawable/login_edittext"
                        android:singleLine="true"
                         android:paddingBottom="3dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="3dip"
            android:inputType="number" />

        <Button
            android:id="@+id/resume"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/upload_image_btn"
            android:layout_marginTop="5dp"
            android:text="Upload Resume" />

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
                android:layout_marginTop="15dp"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/skipaddress"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/upload_image_btn"
                android:text="PREV" />

            <Button
                android:id="@+id/nextaddrs"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/next_btn"
                android:layout_marginRight="18dp"
                android:textColor="#ffffff"
                android:text="NEXT" />



        </RelativeLayout>
        
    </LinearLayout>

</ScrollView>